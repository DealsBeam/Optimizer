<Page
    x:Class="OptimizerGUI.Views.SystemAndNetworkPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="10" Padding="20">
        <TextBlock Text="System &amp; Network" Style="{ThemeResource TitleTextBlockStyle}" />
        <Button Content="Optimize Network" Click="OptimizeNetwork_Click" />
        <Button Content="Optimize DNS" Click="OptimizeDNS_Click" />
        <Button Content="Reset Network Adapter" Click="ResetNetworkAdapter_Click" />
        <Button Content="Manage Services" Click="ManageServices_Click" />
        <Button Content="Input Latency Tweaks" Click="InputLatencyTweaks_Click" />
        <Button Content="Game Mode + GPU Priority" Click="GameMode_Click" />
        <Button Content="Advanced Windows Tweaks" Click="AdvancedWindowsTweaks_Click" />
        <Button Content="Ultimate Performance Power Plan" Click="UltimatePerformance_Click" />
    </StackPanel>
</Page>
