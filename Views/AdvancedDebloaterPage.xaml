<Page
    x:Class="OptimizerGUI.Views.AdvancedDebloaterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Advanced Debloater" Style="{ThemeResource TitleTextBlockStyle}" Margin="20"/>

        <ListView Grid.Row="1" x:Name="AppsListView" SelectionMode="Multiple" Margin="20,0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="2" Content="Uninstall Selected Apps" Click="UninstallButton_Click" HorizontalAlignment="Center" Margin="20"/>
    </Grid>
</Page>
